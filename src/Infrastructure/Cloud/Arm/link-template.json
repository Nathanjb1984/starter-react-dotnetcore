{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "appName": {
      "type": "string",
      "defaultValue": "starter",
      "metadata": {
        "description": "Name of the web app"
      }
    },
    "dbAdminAadObjectId": {
      "type": "string",
      "metadata": {
        "description": "Azure Active directory object id of the AD admin user"
      }
    },
    "githubRepository": {
      "type": "string",
      "metadata": {
        "description": "Github repository"
      }
    },
    "templateBranch": {
      "type": "string",
      "metadata": {
        "description": "Source branch for ARM templates"
      },
      "defaultValue": "master"
    },
    "deployKeyVault": {
      "type": "bool",
      "defaultValue": true
    },
    "deploySqlDatabase": {
      "type": "bool",
      "defaultValue": true
    },
    "deployStorageAccount": {
      "type": "bool",
      "defaultValue": true
    },
    "deployRedisCache": {
      "type": "bool",
      "defaultValue": true
    },
    "deployAzureSearch": {
      "type": "bool",
      "defaultValue": true
    },
    "deployAppInsights": {
      "type": "bool",
      "defaultValue": true
    },
    "deployWorkspace": {
      "type": "bool",
      "defaultValue": true
    },
    "deployWebApp": {
      "type": "bool",
      "defaultValue": true
    },
    "deployKeyVaultPolicy": {
      "type": "bool",
      "defaultValue": true
    },
    "deploykeyVaultPolicy": {
      "type": "bool",
      "defaultValue": true
    },
    "deploykeyVaultSecrets": {
      "type": "bool",
      "defaultValue": true
    },
    "uniqueString": {
      "type": "string",
      "metadata": {
        "description": "String for uniquely identifying resources"
      },
      "defaultValue": "[uniqueString(subscription().subscriptionId, resourceGroup().id, parameters('appName'))]"
    }
  },
  "variables": {
    "keyVaultName": "[concat('kv-',parameters('uniqueString'))]",
    "sqlServerName": "[concat(parameters('appName'),'-',parameters('uniqueString'),'-sql-server')]",
    "sqlDbName": "[concat(parameters('appName'),'-sql-db')]",
    "storageAccountName": "[concat('stor',parameters('uniqueString'))]",
    "appServicePlanName": "[concat(parameters('appName'),'-app-service-plan')]",
    "redisCacheName": "[concat(parameters('appName'),'-',parameters('uniqueString'),'-redis-cache')]",
    "azureSearchName": "[concat(parameters('appName'),'-',parameters('uniqueString'),'-azure-search')]",
    "workspaceName": "[concat(parameters('appName'),'-',parameters('uniqueString'),'-workspace')]",
    "appInsightsName": "[concat(parameters('appName'),'-app-insights')]",
    "webAppName": "[concat(parameters('appName'),'-',parameters('uniqueString'),'-web-app')]",
    "templateBaseUrl": "[concat('https://raw.githubusercontent.com/',parameters('githubRepository'),'/',parameters('templateBranch'),'/src/Infrastructure/Cloud/Arm/')]"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "name": "KeyVault",
      "condition": "[parameters('deployKeyVault')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('templateBaseUrl'), 'key-vault.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "keyVaultName": { "value": "[variables('keyVaultName')]" }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "name": "StorageAccount",
      "condition": "[parameters('deployStorageAccount')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('templateBaseUrl'), 'storage-account.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "storageAccountName": { "value": "[variables('storageAccountName')]" }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "name": "SqlDatabase",
      "condition": "[parameters('deploySqlDatabase')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('templateBaseUrl'), 'sql-db.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "sqlServerName": { "value": "[variables('sqlServerName')]" },
          "sqlDbName": { "value": "[variables('sqlDbName')]" },
          "dbAdminAadObjectId": {
            "value": "[parameters('dbAdminAadObjectId')]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "name": "RedisCache",
      "condition": "[parameters('deployRedisCache')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('templateBaseUrl'), 'redis-cache.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "redisCacheName": { "value": "[variables('redisCacheName')]" },
          "diagnosticsStorageAccountName": {
            "value": "[variables('storageAccountName')]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "name": "AzureSearch",
      "condition": "[parameters('deployAzureSearch')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('templateBaseUrl'), 'azure-search.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "azureSearchName": { "value": "[variables('azureSearchName')]" }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "name": "Workspace",
      "condition": "[parameters('deployWorkspace')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('templateBaseUrl'), 'workspace.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "workspaceName": { "value": "[variables('workspaceName')]" }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "name": "AppInsights",
      "condition": "[parameters('deployAppInsights')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('templateBaseUrl'), 'app-insights.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "appInsightsName": { "value": "[variables('appInsightsName')]" },
          "workspaceName": { "value": "[variables('workspaceName')]" }
        }
      },
      "dependsOn": ["Workspace"]
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "name": "WebApp",
      "condition": "[parameters('deployWebApp')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('templateBaseUrl'), 'web-app.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "webAppName": { "value": "[variables('webAppName')]" },
          "appServicePlanName": { "value": "[variables('appServicePlanName')]" }
        }
      }
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "name": "keyVaultPolicy",
      "condition": "[parameters('deploykeyVaultPolicy')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('templateBaseUrl'), 'key-vault-policy.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "keyVaultName": { "value": "[variables('keyVaultName')]" },
          "objectId": {
            "value": "[reference(resourceId('Microsoft.Web/sites', variables('webAppName')),'2019-08-01', 'Full').identity.principalId]"
          }
        }
      },
      "dependsOn": ["WebApp", "keyVault"]
    },
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2019-10-01",
      "name": "keyVaultSecrets",
      "condition": "[parameters('deploykeyVaultSecrets')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('templateBaseUrl'), 'app-key-vault-secrets.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "keyVaultName": {
            "value": "[variables('keyVaultName')]"
          },
          "appInsightsName": {
            "value": "[variables('appInsightsName')]"
          },
          "appInsightsSecretName": {
            "value": "ApplicationInsights--instrumentationKey"
          },
          "storageAccountName": {
            "value": "[variables('storageAccountName')]"
          },
          "storageAccountSecretName": {
            "value": "AzureStorageAccount--accountKey"
          },
          "redisCacheName": {
            "value": "[variables('redisCacheName')]"
          },
          "redisCacheSecretName": {
            "value": "RedisCache--key"
          },
          "azureSearchName": {
            "value": "[variables('azureSearchName')]"
          },
          "azureSearchSecretName": {
            "value": "AzureSearch--adminKey"
          }
        }
      },
      "dependsOn": [
        "KeyVault",
        "AppInsights",
        "StorageAccount",
        "RedisCache",
        "AzureSearch"
      ]
    }
  ],
  "outputs": {
    "storageAccountName": {
      "type": "string",
      "condition": "[parameters('deployStorageAccount')]",
      "value": "[variables('storageAccountName')]"
    },
    "sqlServerName": {
      "type": "string",
      "condition": "[parameters('deploySqlDatabase')]",
      "value": "[variables('sqlServerName')]"
    },
    "sqlDbName": {
      "type": "string",
      "condition": "[parameters('deploySqlDatabase')]",
      "value": "[variables('sqlDbName')]"
    },
    "redisCacheName": {
      "type": "string",
      "condition": "[parameters('deployRedisCache')]",
      "value": "[variables('redisCacheName')]"
    },
    "azureSearchName": {
      "type": "string",
      "condition": "[parameters('deployAzureSearch')]",
      "value": "[variables('azureSearchName')]"
    },
    "applicationInsightsName": {
      "type": "string",
      "condition": "[parameters('deployAppInsights')]",
      "value": "[variables('appInsightsName')]"
    },
    "keyVaultName": {
      "type": "string",
      "condition": "[parameters('deploykeyVault')]",
      "value": "[variables('keyVaultName')]"
    },
    "webAppName": {
      "type": "string",
      "condition": "[parameters('deployWebApp')]",
      "value": "[variables('webAppName')]"
    }
  }
}
